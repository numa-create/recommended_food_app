<%= form_with model: @food, local: true do |form| %>
  <div>
    <%= form.label :name %> <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.file_field :image, accept: "image/png,image/jpeg,image/gif" %>
  </div>
  <div>
    <%= form.label :comment %> <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>